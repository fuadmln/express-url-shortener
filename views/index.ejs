<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <h1>URL Shrinker</h1>
        <form action="/shortUrl" method="POST" class="my-4 form-inline" id="form">
            <div class="input-group col">
                <label class="visually-hidden" for="fullUrl">Url</label>
                <div class="input-group-text">https://</div>
                <input type="text" class="form-control" id="fullUrl" name="fullUrl" required
                    placeholder="your-url.domain">
                <button class="btn btn-primary" type="submit" id="submit">Shrink</button>
            </div>
        </form>
        <table class="table table-striped table-responsive">
            <thead>
                <th>Full Url</th>
                <th>Short Url</th>
                <th>Clicks</th>
                <th>Actions</th>
            </thead>
            <tbody>
                <% locals.shortUrls.forEach(url=> {%>
                    <tr>
                        <td>
                            <a href="<%= url.full %>">
                                <%= url.full %>
                            </a>
                        </td>
                        <td>
                            <a href="/<%= url.short%>" target="_blank">
                                <%= url.short %>
                            </a>
                        </td>
                        <td>
                            <%= url.clicks %>
                        </td>
                        <td>
                            <a href="/<%= url.short%>/delete">
                                Delete
                            </a>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>
    <script>
        document.getElementById('form').addEventListener('submit', () => {
            console.log('submitted')
            const submitButton = document.getElementById('submit')
            submitButton.disabled = true
            submitButton.innerText = 'Processing...'
        })
    </script>
</body>

</html>